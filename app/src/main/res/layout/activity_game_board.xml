<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="10"
        android:rowCount="10"
        android:layout_margin="16dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/scoreTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </GridLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shelfLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/gridLayout">

        <!-- LinearLayout for shelf items -->
        <LinearLayout
            android:id="@+id/shelfLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minWidth="256dp"
            android:minHeight="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/buttonsLayoutContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shelfLayoutContainer"
        android:padding="8dp">

        <!-- Play Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:textSize="8sp"
            android:minWidth="48dp"
            app:icon="@drawable/ic_play"
            app:iconGravity="top"
            app:iconSize="24dp"
            android:insetTop="6dp"
            android:insetBottom="6dp"
            app:iconPadding="2dp"
            style="@style/CustomMaterialButtonStyle"
            app:layout_constraintStart_toEndOf="@id/shuffleButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            android:enabled="false"/>

        <!-- Shuffle Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/shuffleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shuffle"
            android:textSize="8sp"
            android:minWidth="48dp"
            app:icon="@drawable/ic_shuffle"
            app:iconGravity="top"
            app:iconSize="24dp"
            android:insetTop="6dp"
            android:insetBottom="6dp"
            app:iconPadding="2dp"
            style="@style/CustomMaterialButtonStyle"
            app:layout_constraintStart_toEndOf="@id/playButton"
            app:layout_constraintEnd_toStartOf="@id/recallButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            android:enabled="true"/>

        <!-- Recall Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/recallButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recall"
            android:textSize="8sp"
            android:minWidth="48dp"
            app:icon="@drawable/ic_recall"
            app:iconGravity="top"
            app:iconSize="24dp"
            android:insetTop="6dp"
            android:insetBottom="6dp"
            app:iconPadding="2dp"
            style="@style/CustomMaterialButtonStyle"
            app:layout_constraintStart_toEndOf="@id/shuffleButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            android:enabled="false"/>
    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/wordsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonsLayoutContainer"
        app:flexWrap="wrap"
        app:alignItems="flex_start"
        app:alignContent="flex_start"
        android:padding="8dp"/>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/unusedLettersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/wordsLayout"
        app:flexWrap="wrap"
        android:layout_alignParentBottom="true" />

</androidx.constraintlayout.widget.ConstraintLayout>